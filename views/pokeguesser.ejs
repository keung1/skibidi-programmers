<%- include("partials/header") %>

    <main class = "pokeguesser_main">
        <h1>Wie is deze pok√©mon?</h1>
        <section class = "pokeguesser_bg">
            <img src = "<%= pokemonGuess.image %>" alt = "pokemonToGuessBlack" id = "pokeguesser_black">
        </section>
        <form action="/guesser" method ="post">
            <label for = "guess">Naam: </label>
            <input type = "text" name="guess" id = "guess_input">
            <button type = "submit" id = "guess_button"  value = "raden">Raad</button>
        </form>
        <% if (message) { %>
            <p class = "<%= message.type%>"><%= message.message%></p>
        <% } %> 
        <% if (pokemonGuess.succes) { %>
            <section id = "container_pokeguesser_image">
                <article class = "pokeguesser_image">
                    <button class = "close_button"><a href = "/restart">X</a></button>
                    <h2>Je hebt juist geraden!</h2>
                    <img src = "<%= pokemonGuess.image %>" alt = "pokemonToGuess"  width="150" height="150" id = "pokeguesser_answer">
                    <div id = "guessStats">
                        <h3>Jouw stats</h3>
                        <article class = "guessStat">
                            <p>Hp: <%= oldCurrent.stats[0].base_stat %></p>
                        </article>
                        <article class = "guessStat">
                            <p>Att: <%= oldCurrent.stats[1].base_stat %>
                                <% if(attack) { %>
                                    -> <%= current.stats[1].base_stat %>
                                <% } %>
                            </p>
                        </article>
                        <article class = "guessStat">
                            <p>Def: <%= oldCurrent.stats[2].base_stat %>
                                <% if(defense) { %>
                                    -> <%= current.stats[2].base_stat %>
                                <% } %>
                            </p>
                        </article>
                        <article class = "guessStat">
                            <p>Speed: <%= oldCurrent.stats[5].base_stat %></p>
                        </article>
                    </div>
                </article>
            </section>
        <% } %>
    </main>

<%- include("partials/footer") %>