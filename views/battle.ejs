
<%- include("partials/header") %>
    <main>
    <div class="container">
        <h1>Pokémon Battler</h1>
        
        <section id="search">
            <button type="button" class="random-opponent">Random</button>
            <input type="text" placeholder="Type Pokemon Naam">
            <button class="submit" type="submit">Zoek</button>
        </section>
        <div class="pokemon-container">
            <div class="player-pokemon">
                <div class="player-image">
                <h2>Jouw Pokémon</h2>
                    <img id="pikachu" src="assets/images/pikachu.png" alt="Pikachu">
                </div>
                <div class="player-info">
                    <h2>Naam: Pikachu</h2>
                    <article class = "player-info-stat">
                        <h3>8</h3>
                        <p>Level</p>
                    </article>
                    <article class = "player-info-stat">
                        <h3>18</h3>
                        <p>Aanval</p>
                    </article>
                    <article class = "player-info-stat">
                        <h3>8</h3>
                        <p>Verdediging</p>
                    </article>
                    <article class = "player-info-stat">
                        <h3><span id="player-hp">90</span></h3>
                        <p>HP</p>
                    </article>
                    <div class="player-life">
                    </div>
                    
                </div>
            </div>
            <div class="opponent-pokemon">
                <div class="opponent-image">
                <h2>Tegenstander Pokémon</h2>
                    <img id="charmander" src="assets/images/charmander.png" alt="Pikachu">
                </div>
                <div class="opponent-info">
                    <h2>Naam: Charmander</h2>
                    <article class = "opponent-info-stat">
                        <h3>8</h3>
                        <p>Level</p>
                    </article>
                    <article class = "opponent-info-stat">
                        <h3>18</h3>
                        <p>Aanval</p>
                    </article>
                    <article class = "opponent-info-stat">
                        <h3>8</h3>
                        <p>Verdediging</p>
                    </article>
                    <article class = "opponent-info-stat">
                        <h3><span id="opponent-hp">90</span></h3>
                        <p>HP</p>
                    </article>
                    <div class="opponent-life">
                    </div>
                </div>
            </div>
        </div>
        <a class="attack-btn"><img id="attack-btn" src="assets/images/Pokeball-3.png"></a>
        
        <div class="result" id="result"></div>
    </div>
    <section id = "container_nav_menu">
        <div class = "nav_menu_content">
            <a href="home.html" >Home</a>
            <a href="myteam.html">Teams</a>
            <a href="pokedex.html">Pokédex</a>
            <a href="pokemoncomparison.html">Vergelijken</a>
            <a href="pokecatcher.html">Safari</a>
            <a href="battle.html">Battler</a>
            <a href="pokeguesser.html">Trainen</a>
        </div>
    </section>
</main>
