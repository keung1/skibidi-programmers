          <a class="pokemon-image" href="/detail/<%= pokemon.id %>"> %> <img src="<%= pokemon.sprites.other["official-artwork"].front_default %> " alt=""></a>
          <% } %>
          <p class="pokedexnaam"><%=pokemon.name %></p>
        </article>
      <% } %>

    </section>
