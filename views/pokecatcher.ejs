<%- include("partials/header") %>

    <main class = "pokevanger_main">
        <h2>Gotta Catch 'Em All</h2>
        <div id = "pokevanger_bgcontainer">
            <section id = "pokevanger_bg">
                <a class = "popup_catch"><img src="assets/images/ditto.png" alt = "ditto sprite" class = "pokemon_catch"></a>
            </section>
        </div>
        <section id = "container_pokevanger_menu">
            <article class = "pokevanger_menu">
                <button class = "pokeball_button">
                    <img src="assets/images/iconPokeball.webp" alt = "pokeball" width="40" height="40">
                </button>
                <h3>Ditto</h3>
                <img src="assets/images/ditto.png" alt = "ditto sprite" class = "pokevanger_menu_image" width="300" height="300">
                <p>Type: <span>normal</span></p>
                <p>lv: <span>16</span></p>
            </article>
        </section>
        <section id = "container_pokevanger_image">
            <article class = "pokevanger_image">
                <div id = "pokevanger_bgfield">
                    <img src="assets/images/ditto.png" alt = "ditto sprite" width="200" height="200">
                    <p id = "catch_text">Gevangen!</p>
                    <p id = "missed_text">Gemist!</p>
                    <p id = "pokeballs">pokéballs: <span id = "amount_balls">3</span></p>
                </div>
                <button id = "catch_button">
                    <img src="assets/images/iconPokeball.webp" alt = "pokeball">
                </button>
                <button id = "run_button">
                    <img src = "assets/images/pokemonRunButton.webp" alt = "run">
                </button>
            </article>
        </section>
        <section id = "container_confirmation_release">
            <form class = "confirmation_release">
                <p>Ben je zeker dat je deze pokémon wil vrijlaten?</p>
                <input type = "button" value = "Yes">
                <input type = "button" value = "No">
            </form>
        </section>
    </main>

<%- include("partials/footer") %>